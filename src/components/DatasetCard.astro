---
interface Props {
  id: string;
  title: string;
  titleEn: string;
  description: string;
  icon: string;
  category: string;
  categoryEn: string;
  updatedAt: string;
  format: string;
  url: string;
}

const { title, titleEn, description, icon, categoryEn, updatedAt, format, url } = Astro.props;
---

<a href={url} target="_blank" rel="noopener" class="dataset-card card">
  <div class="card-header">
    <span class="card-icon">{icon}</span>
    <span class="card-category">{categoryEn}</span>
  </div>
  <h3 class="card-title">{title}</h3>
  <p class="card-title-en">{titleEn}</p>
  <p class="card-desc">{description}</p>
  <div class="card-meta">
    <span class="card-format">{format}</span>
    <span class="card-date">{updatedAt}</span>
  </div>
</a>

<style>
  .dataset-card {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: var(--text-primary);
    cursor: pointer;
  }

  .dataset-card:hover {
    color: var(--text-primary);
    border-color: var(--accent-blue);
    box-shadow: 0 0 30px rgba(59, 130, 246, 0.08);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .card-icon {
    font-size: 1.5rem;
  }

  .card-category {
    font-family: var(--font-mono);
    font-size: 0.6rem;
    letter-spacing: 0.15em;
    color: var(--accent-green);
    border: 1px solid rgba(34, 197, 94, 0.25);
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
  }

  .card-title {
    font-family: var(--font-sans);
    font-size: 1rem;
    font-weight: 700;
    margin-bottom: 0.15rem;
    line-height: 1.4;
  }

  .card-title-en {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--text-dim);
    letter-spacing: 0.05em;
    margin-bottom: 0.75rem;
  }

  .card-desc {
    font-size: 0.85rem;
    color: var(--text-secondary);
    flex: 1;
    line-height: 1.6;
  }

  .card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 1rem;
    padding-top: 0.75rem;
    border-top: 1px solid var(--border);
  }

  .card-format {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    letter-spacing: 0.1em;
    color: var(--accent-orange);
    background: rgba(249, 115, 22, 0.1);
    padding: 0.15rem 0.5rem;
    border-radius: 4px;
  }

  .card-date {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--text-dim);
  }
</style>
