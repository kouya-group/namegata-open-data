---
interface Props {
  id: string;
  title: string;
  titleEn: string;
  description: string;
  icon: string;
  category: string;
  categoryEn: string;
  updatedAt: string;
  format: string;
  url: string;
  sourcePageUrl?: string;
  status?: 'available' | 'unavailable';
  rowCount?: number;
  columnCount?: number;
  fileSizeBytes?: number;
  fetchedAt?: string;
  license?: string;
  sha256?: string;
  error?: string;
}

const {
  id,
  title,
  titleEn,
  description,
  icon,
  categoryEn,
  updatedAt,
  format,
  url,
  sourcePageUrl,
  status = 'available',
  rowCount,
  columnCount,
  fileSizeBytes,
  fetchedAt,
  license = 'CC BY 2.1 JP',
  sha256,
  error,
} = Astro.props;

const formatBytes = (bytes?: number) => {
  if (typeof bytes !== 'number' || Number.isNaN(bytes)) {
    return '-';
  }
  if (bytes < 1024) {
    return `${bytes} B`;
  }
  if (bytes < 1024 ** 2) {
    return `${(bytes / 1024).toFixed(2)} KB`;
  }
  return `${(bytes / 1024 ** 2).toFixed(2)} MB`;
};

const shortHash = sha256 ? `${sha256.slice(0, 14)}...` : '-';
const detailUrl = sourcePageUrl ?? url;
const pageUrl = `/datasets/${id}/`;
---

<article class={`dataset-card card ${status !== 'available' ? 'is-unavailable' : ''}`}>
  <div class="card-header">
    <span class="card-icon">{icon}</span>
    <span class="card-category">{categoryEn}</span>
  </div>
  <h3 class="card-title">{title}</h3>
  <p class="card-title-en">{titleEn}</p>
  <p class="card-desc">{description}</p>

  {status === 'available' ? (
    <div class="card-summary">
      <span>{rowCount?.toLocaleString('ja-JP') ?? '-'} 件</span>
      <span>{columnCount ?? '-'} 列</span>
      <span>{formatBytes(fileSizeBytes)}</span>
    </div>
  ) : (
    <p class="card-error">現在このデータは取得できませんでした: {error ?? '不明なエラー'}</p>
  )}

  <div class="card-meta">
    <span class="card-format">{format}</span>
    <span class="card-date">{updatedAt}</span>
  </div>

  <div class="card-actions">
    <a href={pageUrl} class="card-link card-link-primary">データを見る</a>
    <a href={url} target="_blank" rel="noopener" class="card-link">
      元データCSV
    </a>
    <a href={detailUrl} target="_blank" rel="noopener" class="card-link">
      市公式ページ
    </a>
  </div>

  <details class="evidence-panel">
    <summary>エビデンスを表示</summary>
    <dl>
      <dt>取得元URL</dt>
      <dd><a href={url} target="_blank" rel="noopener">{url}</a></dd>

      <dt>取得日時</dt>
      <dd>{fetchedAt ?? '未取得'}</dd>

      <dt>SHA-256</dt>
      <dd class="mono" title={sha256}>{shortHash}</dd>

      <dt>ライセンス</dt>
      <dd>{license}</dd>

      <dt>変換処理</dt>
      <dd>CSV (Shift_JIS/UTF-8) → UTF-8 → JSON</dd>
    </dl>
  </details>
</article>

